<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/core_colorPrimary"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/showProjects"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:adjustViewBounds="true"
        android:src="@drawable/baseline_projects_24"
        app:tint="@color/core_white" />

    <FrameLayout
        android:background="#2A2A2A"
        android:layout_margin="8dp"
        android:layout_width="2dp"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/createFolder"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:adjustViewBounds="true"
        android:src="@drawable/core_baseline_folder_24"
        app:tint="@color/core_white" />

    <ImageView
        android:id="@+id/createFile"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:adjustViewBounds="true"
        android:src="@drawable/core_baseline_file_24"
        app:tint="@color/core_white" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <ImageView
        android:layout_margin="8dp"
        android:id="@+id/jobs"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:src="@drawable/core_baseline_list_24"
        app:tint="@color/core_white" />


</LinearLayout>
