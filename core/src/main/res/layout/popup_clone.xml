<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/repo_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Repository URL"
        android:inputType="textUri" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:inputType="text" />

    <EditText
        android:id="@+id/password_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password / Private Token"
        android:inputType="textPassword" />

    <!-- Updated CheckBox for Scenario 2 -->
    <CheckBox
        android:id="@+id/overwrite_project_files"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="I understand that my current project files will be merged with the repository files. In case of conflicts, my project files will override the repository files." />
</LinearLayout>
